<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/actualizar_medidas"
    android:layout_gravity="center"
    android:gravity="center"
    >

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="¿En qué trabajas?"
        android:textColor="@color/textBLack"
        android:textAlignment="center"
        ></TextView>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Seleccione el tipo de trabajo que realizas e indica la cantidad de horas totales diarias."
        android:textColor="@color/textBLack"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        ></TextView>

    <RadioGroup

        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbLigero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </RadioButton>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="TRABAJO LIGERO"
                    android:textColor="@color/textBLack"
                    android:textSize="@dimen/size_rutina_trabajo_tit1"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="(Oficina, Estudio, Computación, Comercio, etc)"
                    android:textColor="@color/textBLack"
                    android:textSize="@dimen/size_rutina_trabajo_tit2"></TextView>
            </LinearLayout>

            <org.angmarch.views.NiceSpinner
                android:id="@+id/sp_ligero"
                android:layout_width="85dp"
                android:layout_height="@dimen/heightSpinner"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_spn_background"
                android:padding="0dp"
                android:tag="select"
                android:textAlignment="center"
                android:textSize="15sp"
                app:dropDownListPaddingBottom="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbCasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </RadioButton>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="TRABAJO DE CASA"
                    android:textColor="@color/textBLack"
                    android:textSize="@dimen/size_rutina_trabajo_tit1"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="(Barrer, cocinar, planchar, etc.)"
                    android:textColor="@color/textBLack"
                    android:textSize="@dimen/size_rutina_trabajo_tit2"></TextView>
            </LinearLayout>
            
            <org.angmarch.views.NiceSpinner
                android:id="@+id/sp_casa"
                android:layout_width="85dp"
                android:layout_height="@dimen/heightSpinner"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_spn_background"
                android:padding="0dp"
                android:tag="select"
                android:textAlignment="center"
                android:textSize="15sp"
                app:dropDownListPaddingBottom="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbActivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </RadioButton>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="TRABAJO ACTIVO"
                    android:textColor="@color/textBLack"
                    android:textSize="@dimen/size_rutina_trabajo_tit1"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="(Industria Ligera, contrucción, etc)"
                    android:textColor="@color/textBLack"
                    android:textSize="@dimen/size_rutina_trabajo_tit2"></TextView>
            </LinearLayout>

            <org.angmarch.views.NiceSpinner
                android:id="@+id/spActivo"

                android:layout_width="85dp"
                android:layout_height="@dimen/heightSpinner"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_spn_background"
                android:padding="0dp"
                android:tag="select"
                android:textAlignment="center"
                android:textSize="15sp"
                app:dropDownListPaddingBottom="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbMuyActivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </RadioButton>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="TRABAJO MUY ACTIVO"
                    android:textColor="@color/textBLack"
                    android:textSize="@dimen/size_rutina_trabajo_tit1"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="(Industria Ligera, contrucción, etc)"
                    android:textColor="@color/textBLack"
                    android:textSize="@dimen/size_rutina_trabajo_tit2"
                    tools:text="(Mineros, atletas, bailarines, etc)"></TextView>
            </LinearLayout>

            <org.angmarch.views.NiceSpinner
                android:id="@+id/spMuyActivo"

                android:layout_width="85dp"
                android:layout_height="@dimen/heightSpinner"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_spn_background"
                android:padding="0dp"
                android:tag="select"
                android:textAlignment="center"
                android:textSize="15sp"
                app:dropDownListPaddingBottom="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbNinguno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </RadioButton>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="NO REALIZO NINGUN TIPO DE TRABAJO"
                    android:textColor="@color/textBLack"
                    android:textSize="@dimen/size_rutina_trabajo_tit1"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

        </LinearLayout>
    </RadioGroup>
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btnContinuar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_radio_principal"
        android:text="Continuar"
        android:textColor="@color/textBLack"
        android:textSize="16sp"
        android:textStyle="bold"
        />
</LinearLayout>