<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/actualizar_medidas"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <include
        android:layout_gravity="center"
        layout="@layout/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Â¡Vamos a conocer tu rutina!"
        android:textColor="@color/textBLack"
        android:textAlignment="center"
        ></TextView>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Indica la cantidad aproximada de horas totales que realizas las siguientes actividades."
        android:textColor="@color/textBLack"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        ></TextView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="CAMINAR"
            android:textColor="@color/textBLack"
            android:gravity="center"
            ></TextView>
        <org.angmarch.views.NiceSpinner
            android:background="@drawable/custom_spn_background"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/sp_caminar"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:padding="0dp"
            app:dropDownListPaddingBottom="0dp"
            android:textAlignment="center"
            />


        <!--
        <Spinner
            android:id="@+id/caminar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/textWhite"
           />
        -->
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="BAJAR/SUBIR ESCALERAS"
            android:textColor="@color/textBLack"
            android:gravity="center"
            ></TextView>

        <org.angmarch.views.NiceSpinner
            android:background="@drawable/custom_spn_background"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/sp_escaleras"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:padding="0dp"
            app:dropDownListPaddingBottom="0dp"
            android:textAlignment="center"
           />

        <!--
        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/bajarsubir"
            android:maxLength="1"
            android:inputType="number"
            android:background="@drawable/editext_corner"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding ="5dp"
            android:gravity="center"
            ></EditText>
            -->
    </LinearLayout>
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btnContinuar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_radio_principal"
        android:text="Continuar"
        android:textColor="@color/textBLack"
        android:textSize="16sp"
        android:textStyle="bold"
        />
</LinearLayout>